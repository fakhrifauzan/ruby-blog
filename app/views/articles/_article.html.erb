<div class="row">
  <div class="offset-md-2 col-md-8">
    <% obj.each do |article| %>
      <div class="card bg-light mb-3">
        <div class="card-body">
          <div class="article-title">
            <%= link_to article.title, article_path(article) %>
          </div>
          <div class="article-body">
            <%= truncate(article.description, length: 100) %>
            <div class="article-meta-details">
              <small>
                Created by: <%= article.user.username if article.user %>, 
                <%= time_ago_in_words(article.created_at) %> ago, 
                last updated: <%= time_ago_in_words(article.updated_at) %> ago
              </small>
            </div>            
          </div>
          <div class="article-actions">
            <%= link_to "Show", article_path(article), class: "btn btn-primary" %>        
            <%= link_to "Edit", edit_article_path(article), class: "btn btn-warning" %>
            <%= link_to "Delete", article_path(article), method: :delete, data: { confirm: "Are you sure want to delete this article?" }, class: "btn btn-danger" %>
          </div>      
        </div>
      </div>
    <% end %>
  </div>
</div>