<h1>Create an Article</h1>

<% if @article.errors.any? %>
  <h2>The following errors prevented the articles from getting created</h2>
  <ul>
    <% @article.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @article do |a| %>
  <p>
    <%= a.label :title %><br>
    <%= a.text_field :title %>
  </p>
  <p>
    <%= a.label :description %><br>
    <%= a.text_area :description %>
  </p>
  <p>
    <%= a.submit %>
  </p>
<% end %>