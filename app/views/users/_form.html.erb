<%= render 'shared/errors', obj: @user %>

<div class="row">
  <div class="col-md-12">
    <%= form_for @user do |u| %>
      <div class="form-group row">
        <label class="col-md-2 col-form-label"><%= u.label :username %></label>
        <div class="col-md-10">
          <%= u.text_field :username, class: "form-control",  placeholder: "Enter your Username", autofocus: true %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-md-2 col-form-label"><%= u.label :email %></label>
        <div class="col-md-10">
          <%= u.email_field :email, class: "form-control", placeholder: "Enter your E-Mail" %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-md-2 col-form-label"><%= u.label :password %></label>
        <div class="col-md-10">
          <%= u.password_field :password, class: "form-control", placeholder: "Enter your Password" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="offset-md-2 col-md-10">
          <%= u.submit(@user.new_record? ? "Sign Up" : "Update your Account", class: "btn btn-primary") %>
        </div>
      </div>
    <% end %>

    <div class="offset-md-4 col-md-4">
      [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
    </div>
  </div>
</div>